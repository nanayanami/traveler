<div class="cover-new">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <h1 class="font-weigth-normal">旅行新規投稿</h1>
    </div>
    <div class="row mt-5">
      <%=  form_with model: @post, local:true do |f| %>
        <div class="form-group mb-3">
          <label class="form-label">【旅行先】</label>
          <%= f.text_field :location, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">【感想】</label>
          <%= f.text_area :text, rows:10, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">【画像】</label><br>
          <%= f.file_field :image %>
        </div>
        <%= f.submit '投稿する', class: "btn-success" %>
      <% end %>
    </div>
  </div>
</div>
